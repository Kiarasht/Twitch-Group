<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vertical_scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textnow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top games:"
            android:textSize="20sp"
            android:textColor="@color/Black"/>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textnow"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/textnow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear"
            android:text="Top streams:"
            android:textSize="20sp"
            android:textColor="@color/Black"/>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textnow2"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/textnow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear2"
            android:text="Top videos:"
            android:textSize="20sp"
            android:textColor="@color/Black"/>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textnow3"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/textnow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear3"
            android:text="Top teams:"
            android:textSize="20sp"
            android:textColor="@color/Black"/>

        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textnow4"
            android:orientation="horizontal"/>
    </RelativeLayout>
</HorizontalScrollView>